# LINE Messaging API
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key

# Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
# RLS有効化後はservice_roleキーを設定（Dashboard > Settings > API > service_role）
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server
PORT=3000
NODE_ENV=development

# Error Notification (LINE Messaging API)
ADMIN_LINE_USER_ID=your_admin_line_user_id
ENABLE_ERROR_NOTIFICATIONS=false

# Admin Commands
ADMIN_LINE_IDS=U1234567890abcdef,U0987654321fedcba

# Instagram Graph API（Meta for Developers で取得）
# https://developers.facebook.com/ でアプリを作成し、Instagram Graph APIを追加
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# セキュリティ: トークン暗号化キー（必須）
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_char_hex_string_here

# お問い合わせメールアドレス（必須）
CONTACT_EMAIL=your_contact_email@example.com

# メンテナンスモード（trueで有効化）
MAINTENANCE_MODE=false
